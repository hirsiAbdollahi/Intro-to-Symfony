{% extends "_template.html.twig" %}

{% block title %}
    Confirmation du compte 
{% endblock %}


{% block content %}



<div class="section">
    <h2 class="title"> Confirmation de votre compte</h2>
</div>


 {# Flash messages confirmation compte#}
 {% for label, messages in app.flashes(['confirm1', 'confirm2', 'confirm3']) %}
    {% for message in messages %}
         <div class="notification is-{{ label }}">
                {{ message }}
        </div>
   {% endfor %}
{% endfor %}

<div class="section">
    {{ form_start(confirmation_form) }}
        {{ form_row(confirmation_form.email, {
            label: 'Votre email'
        }) }}
        <button class="button is-success" type="submit">
        Renvoyez mail de confirmation
       </button>
    {{ form_end(confirmation_form) }}
</div>



{% endblock %}
