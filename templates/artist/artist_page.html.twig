{% extends "_template.html.twig" %}

{% block title %}
    {{ artist.name }}
{% endblock %}

{% block content %}
    <div class="section">
        <h2 class="title">{{ artist.name }}</h2>
        <p>{{ artist.description }}</p>

        <hr>
        <h3 class="subtitle">
            Albums: {{ artist.records|length }}
        </h3>
        {% include 'includes/record_list.html.twig' with {records: artist.records} %}
    </div>
{% endblock %}

