{% extends "_template.html.twig" %}

{% block title %}
    {{ record.title }}
{% endblock %}

{% block content %}
    <div class="section">
        <h2 class="title">
            Album: {{ record.title }}
        </h2>
        <small>Sorti le {{ record.releasedAt|date('d/m/Y') }}</small>
        <p>{{ record.description }}</p>
        
        <hr>
        <b>Artiste:</b> 
        <a href="{{ path('artist_page', {id:  record.artist.id}) }}">
            {{ record.artist.name }}
        </a>
        <br>
        
        {% if record.label %}
            <b>Label:</b> <a href="{{ path('label_page', {id:  record.label.id}) }}">
                {{ record.label.name }}
            </a>
        {% else %}
            <p>Autoproduction</p>
        {% endif %}
    </div>
{% endblock %}

